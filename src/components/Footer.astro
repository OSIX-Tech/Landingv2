---
const currentYear = new Date().getFullYear();

// Navigation links
const navLinks = [
  { name: 'Services', url: '#services', scrollAdjust: -30 },
  { name: 'Values', url: '#values', scrollAdjust: -50 },
  { name: 'Projects', url: '#projects', scrollAdjust: 30 },
  { name: 'About Us', url: '#about', scrollAdjust: -60 },
  { name: 'Awards', url: '#awards', scrollAdjust: -20 },
];

// Contact info
const contactInfo = [
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
