    </div>
  </div>
  <button id="close-contact-dropdown" class="absolute top-2 right-4 text-black text-2xl font-bold">&times;</button>
</div>

<script>
  // Mostrar/ocultar el panel
  window.toggleContactDropdown = function(show) {
    const panel = document.getElementById('contact-dropdown');
    const content = panel ? panel.querySelector('.contact-content') : null;
    if (!panel || !content) return;
    if (show) {
      panel.classList.remove('hidden');
      panel.classList.add('open');
      content.classList.remove('opacity-0', 'pointer-events-none');
      content.classList.add('opacity-100', 'pointer-events-auto');
    } else {
      panel.classList.remove('open');
      content.classList.remove('opacity-100', 'pointer-events-auto');
      content.classList.add('opacity-0', 'pointer-events-none');
      setTimeout(() => {
        panel.classList.add('hidden');
      }, 400); // Espera a que termine la transición de opacidad
    }
  };
  // Cerrar al hacer clic en la X
  document.addEventListener('DOMContentLoaded', () => {
    const closeBtn = document.getElementById('close-contact-dropdown');
    if (closeBtn) {
      closeBtn.addEventListener('click', () => window.toggleContactDropdown(false));
    }
  });
</script>

<style>
#contact-dropdown {
  max-height: calc(100vh - 5rem);
  overflow-y: auto;
}
#contact-dropdown .contact-content {
  opacity: 0;
  pointer-events: none;
}
#contact-dropdown.open .contact-content {
  opacity: 1;
  pointer-events: auto;
}
#contact-dropdown {
  box-shadow: 0 8px 32px 0 rgba(0,0,0,0.18);
  border-bottom-left-radius: 1rem;
  border-bottom-right-radius: 1rem;
}
</style> 