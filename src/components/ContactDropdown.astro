      <textarea placeholder="Tu mensaje" class="w-full mb-3 p-2 rounded bg-black text-white placeholder:text-gray-400"></textarea>
      <button class="w-full bg-white text-black border border-black rounded py-2 font-medium hover:bg-black hover:text-white transition">Enviar</button>
    </div>
    <!-- Mapa y redes -->
    <div class="flex-1 flex flex-col gap-4 min-w-[260px] max-w-md">
      <div class="bg-black rounded-lg overflow-hidden h-24 flex items-center justify-center">
        <span class="text-white text-xs">[Mapa de ejemplo]</span>
      </div>
      <div class="flex gap-3 justify-center">
        <a href="#" class="text-black hover:text-gray-600"><i class="fab fa-linkedin"></i>in</a>
        <a href="#" class="text-black hover:text-gray-600"><i class="fab fa-youtube"></i>yt</a>
