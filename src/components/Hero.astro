  </video>

  <!-- Center headline & logo -->
  <div class="absolute bottom-28 left-1/2 transform -translate-x-1/2 z-10">
    <img
      src="/full_logo.png"
      alt="OSIX logo"
      class="w-36 sm:w-40 md:w-44 lg:w-48 h-auto"
    />
  </div>
  <div class="absolute bottom-0 left-0 w-full pointer-events-none z-10"></div>
