---
// Hero.astro - Réplica exacta del diseño de la imagen proporcionada
export interface Props {
  title?: string;
}
---

<section id="home" class="relative w-full min-h-screen flex flex-col items-center justify-start pt-20 overflow-hidden">
  <!-- Background video -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute inset-0 w-full h-full object-cover z-0"
  >
    <source src="/hero.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <!-- Left navigation list -->
  <nav class="absolute left-8 sm:left-16 lg:left-20 top-[30%] z-10">
    <ul class="text-white text-xl sm:text-2xl lg:text-3xl font-light space-y-4">
      <li>
        <a href="#services" class="flex items-center gap-2 group nav-item" data-scroll-adjust="0">
          <span class="inline-block w-3 h-[2px] bg-white transition-all duration-300 group-hover:w-6"></span>
          Service
        </a>
      </li>
      <li>
        <a href="#values" class="flex items-center gap-2 group nav-item" data-scroll-adjust="0">
          <span class="inline-block w-3 h-[2px] bg-white transition-all duration-300 group-hover:w-6"></span>
          Values
        </a>
      </li>
      <li>
        <a href="#projects" class="flex items-center gap-2 group nav-item" data-scroll-adjust="0">
          <span class="inline-block w-3 h-[2px] bg-white transition-all duration-300 group-hover:w-6"></span>
          Projects
        </a>
      </li>
      <li>
        <a href="#about" class="flex items-center gap-2 group nav-item" data-scroll-adjust="0">
          <span class="inline-block w-3 h-[2px] bg-white transition-all duration-300 group-hover:w-6"></span>
          Team
        </a>
      </li>
      <li>
        <a href="#awards" class="flex items-center gap-2 group nav-item" data-scroll-adjust="0">
          <span class="inline-block w-3 h-[2px] bg-white transition-all duration-300 group-hover:w-6"></span>
          Awards
        </a>
      </li>
      <li>
        <a href="#contact" class="flex items-center gap-2 group nav-item" data-scroll-adjust="-60">
          <span class="inline-block w-3 h-[2px] bg-white transition-all duration-300 group-hover:w-6"></span>
          Contact
        </a>
      </li>
    </ul>
  </nav>

  <!-- Center headline & logo -->
  <div class="relative z-10 text-center">
    <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-[42px] font-medium leading-loose text-black">
      Walk the line<br class="hidden sm:block mb-2" />
      that shapes tomorrow
    </h1>
    <img
      src="/full_logo.png"
      alt="OSIX logo"
      class="mx-auto mt-10 w-16 sm:w-20 md:w-24 lg:w-28 h-auto"
    />
  </div>
  <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-b from-transparent via-white/80 to-white pointer-events-none z-10"></div>
</section>

<style>
  nav ul li a {
    color: inherit;
    text-decoration: none;
    transition: font-weight 0.2s ease, color 0.2s ease;
  }
  nav ul li a:hover {
    text-decoration: none;
    font-weight: 600; /* semi-bold on hover */
  }
</style>