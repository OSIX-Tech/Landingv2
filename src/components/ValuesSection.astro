---
// ValuesSection.astro - Secci√≥n de valores tipo mockup

const values: string[] = [
  "High-Quality Software",
  "Fast and Efficient Development",
  "Cutting-Edge Technology Stack",
  "Flexibility and Adaptability",
  "Client-Centered Solutions"
];
---

<section id="values" class="w-full min-h-screen flex flex-col justify-center bg-white py-16">
  <div class="w-full max-w-7xl mx-auto px-6 md:px-12">
    <h2 class="section-title">
      Our <span class="font-bold">Core Values</span>
    </h2>
    
    <div class="mt-8">
      <ol class="space-y-8">
        {values.map((value: string, idx: number) => (
          <li class="flex items-baseline gap-8">
            <span class="text-4xl md:text-5xl font-bold text-black min-w-[60px] text-left">{String(idx+1).padStart(2, '0')}</span>
            <span class="text-2xl md:text-3xl font-normal text-black">{value}</span>
          </li>
        ))}
      </ol>
    </div>
  </div>
</section> 