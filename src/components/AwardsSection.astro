---
// AwardsSection.astro - Sección de premios tipo timeline con hexágonos

const awards = [
  {
    date: 'April 2025',
    title: '2.º Price EIJE 2025',
    description: 'oPills ~ First ever intelligent medical tracker app completely focused on accesibility',
  },
  {
    date: 'April 2025',
    title: '3.º IMPACTHON USC 2025',
    description: 'oNote ~ Realtime university lectures transcriptor',
  },
  {
    date: 'March 2025',
    title: '2.º OdiselA 2025',
    description: 'oPills ~ First ever intelligent medical tracker app completely focused on accesibility',
  },
  {
    date: 'March 2025',
    title: '2.º HackUDC 2025',
    description: 'Wearendar ~ Calendar app with outfit recommendations depending on scheduled events',
  }
];
---
<section id="awards" class="w-full min-h-[90vh] sm:min-h-screen flex flex-col justify-center bg-white py-10 sm:py-6 lg:py-0 relative">
  <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 md:px-12">
    <h2 class="section-title">
      Our <span class="font-bold">Awards</span>
    </h2>
    
    <!-- Versión para escritorio - Timeline horizontal con hexágonos -->  
    <div class="hidden md:block space-y-0 relative mt-8">
      <!-- Línea vertical central (desktop) -->
      <div class="absolute left-1/2 top-0 bottom-0 w-1 bg-black transform -translate-x-1/2 z-0"></div>
      
      {awards.map((award, idx) => (
        <div class="grid grid-cols-3 items-center relative">
          <!-- Columna izquierda -->
          <div class={`${idx % 2 === 0 ? 'text-right pr-4 lg:pr-8' : ''}`.trim()}>
            {idx % 2 === 0 && (
              <div class="max-w-lg ml-auto">
                <div class="text-sm text-gray-700 mb-1">{award.date}</div>
                <h3 class="text-xl sm:text-2xl font-bold mb-1">{award.title}</h3>
                <p class="text-sm sm:text-base">{award.description}</p>
              </div>
            )}
          </div>
          <!-- Columna central: hexágono -->
          <div class="flex flex-col items-center">
            <div class="bg-white p-1 rounded-full">
              <img src="/logo_pre.svg" alt="Logo" class="w-8 h-8 z-10" />
            </div>
          </div>
          <!-- Columna derecha -->
          <div class={`${idx % 2 === 1 ? 'text-left pl-4 lg:pl-8' : ''}`.trim()}>
            {idx % 2 === 1 && (
              <div class="max-w-lg mr-auto">
                <div class="text-sm text-gray-700 mb-1">{award.date}</div>
                <h3 class="text-xl sm:text-2xl font-bold mb-1">{award.title}</h3>
                <p class="text-sm sm:text-base">{award.description}</p>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Versión para móviles - Tarjetas apiladas -->
    <div class="md:hidden mt-8">
      <div class="flex flex-col space-y-4">
        {awards.map((award, index) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100" style={`--index: ${index}`}>
            <div class="bg-black p-3 flex items-center">
              <div class="bg-white p-1 rounded-full mr-3">
                <img src="/logo_pre.svg" alt="Logo" class="w-6 h-6" />
              </div>
              <h3 class="text-white text-lg font-bold">{award.title}</h3>
            </div>
            <div class="p-4">
              <div class="text-xs text-gray-500 mb-2">{award.date}</div>
              <p class="text-sm">{award.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Estilos para la versión de escritorio */
  #awards .grid {
    margin-bottom: 2rem;
  }
  
  /* Efectos para las tarjetas en móvil */
  @media (max-width: 767px) {
    #awards .rounded-lg {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    #awards .rounded-lg:active {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
  }
  
  /* Efecto hover en los logos */
  #awards img {
    transition: transform 0.2s ease;
    position: relative;
    z-index: 10;
  }
  
  #awards img:hover {
    transform: scale(1.1);
  }
  
  /* Animación de entrada para las tarjetas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  #awards .md\:hidden .rounded-lg {
    animation: fadeInUp 0.5s ease forwards;
    animation-delay: calc(var(--index, 0) * 0.1s);
  }
</style>